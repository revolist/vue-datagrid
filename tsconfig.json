{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "paths": {
      "@revolist/vue-datagrid": ["lib"]
    }
  },
  "include": ["types/jsx.d.ts", "lib", "/**/*.d.ts", "/**/*.ts"],
  "exclude": ["node_modules", "demo", "demo-wp"]
}
